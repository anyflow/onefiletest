{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [{
            "taskName": "java build",
            "command": "javac",
            "args": ["-g", "${file}", "-d", "${workspaceRoot}/bin/java"]
        },
        {
            "taskName": "C++ build",
            "command": "g++",
            "args": ["-g", "${file}", "-o", "${workspaceRoot}/bin/cpp/${fileBasenameNoExtension}", "-std=c++14"]
        }
    ]
}