{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [{
            "label": "C++ build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceRoot}/bin/cpp/${fileBasenameNoExtension}",
                "-std=c++14"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "java build",
            "command": "javac",
            "args": [
                "-g",
                "${file}",
                "-d",
                "${workspaceRoot}/bin/java"
            ]
        }
    ]
}