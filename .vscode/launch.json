{
  "version": "0.2.0",
  "configurations": [

    {
      "name": "C++",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceRoot}/cpp/bin/${fileBasenameNoExtension}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceRoot}",
      "environment": [],
      "externalConsole": false,
      "logging": {
        "programOutput": true
      },
      "linux": {
        "MIMode": "gdb"
      },
      "osx": {
        "MIMode": "lldb"
      },
      "windows": {
        "MIMode": "gdb"
      }
    },
    {
      "name": "Java",
      "type": "java",
      "request": "launch",
      "stopOnEntry": true,
      "cwd": "${fileDirname}",
      "startupClass": "${fileBasename}",
      "sourcePath": [
        "${workspaceRoot}/java"
      ],
      "jdkPath": "/usr/bin",
      "options": [
        "-classpath", "${workspaceRoot}/java/bin"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "javascript",
      "program": "${file}",
      "cwd": "${workspaceRoot}/javascript",
      "env": {}
    }
  ]
}