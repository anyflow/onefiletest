{
  "version": "0.2.0",
  "configurations": [{
      "name": "C++",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceRoot}/bin/cpp/${fileBasenameNoExtension}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceRoot}",
      "environment": [],
      "externalConsole": true,
      "preLaunchTask": "C++ build",
      "launchCompleteCommand": "exec-run",
      "osx": {
        "MIMode": "lldb",
        "miDebuggerPath": "/Applications/Xcode.app/Contents/Developer/usr/bin/lldb-mi"
      },
      "linux": {
        "MIMode": "gdb",
        "setupCommands": [{
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true,
        }]
      },
      "windows": {
        "MIMode": "gdb",
        "setupCommands": [{
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }]
      }
    },
    {
      "name": "Python",
      "type": "python",
      "request": "launch",
      "stopOnEntry": true,
      "pythonPath": "${config:python.pythonPath}",
      "program": "${file}",
      "cwd": "${workspaceRoot}",
      "env": {},
      "envFile": "${workspaceRoot}/.env",
      "debugOptions": [
        "WaitOnAbnormalExit",
        "WaitOnNormalExit",
        "RedirectOutput"
      ]
    },
    {
      "type": "java",
      "name": "Java",
      "request": "launch",
      "mainClass": "${file}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "javascript",
      "program": "${file}",
      "cwd": "${workspaceRoot}/javascript",
      "env": {}
    }
  ]
}